<%= form_with model: @book, url: update_book_path(@book.id) do |f| %>
<%= f.label :title %>
<%= f.text_field :title %><br>
<%= f.label :price %>
<%= f.text_field :price %><br>
<%= f.label :subject %>
<%= f.collection_select :subject_id, @subjects, :id, :name %>
<%= f.label :description %>
<%= f.text_area :description %><br>
<%= f.submit "Buch speichern" %>
<%= link_to "Abbrechen", books_path %>
<% end %>
